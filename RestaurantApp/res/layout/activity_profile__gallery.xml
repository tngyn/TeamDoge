<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation= "vertical"
    tools:context="com.teamdoge.restaurantapp.Profile_Gallery"
    tools:ignore="MergeRootFrame" >



    <Button
        android:id="@+id/button100"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:onClick="setAvailableTimes"
        android:text="Set Available Times" />

    <TextView
        android:id="@+id/puserNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_profile_picture_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Name"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/puserUserNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/puserNameText"
        android:layout_centerHorizontal="true"
        android:text="UserName"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/puserAcctText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:text="Account"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/puserPNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/puserAcctText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="555-555-5555"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/puserEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/puserPNumberText"
        android:layout_centerHorizontal="true"
        android:text="Email"
        android:textSize="20sp"/>

    <com.teamdoge.restaurantapp.TouchHighlightImageButton
        android:id="@+id/image_button_1"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/puserUserNameText"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:scaleType="centerCrop"
        android:src="@drawable/blank_profile" />

    <Button
        android:id="@+id/change_profile_picture_button"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_button_1"
        android:layout_alignRight="@+id/button1"
        android:layout_toRightOf="@+id/puserPNumberText"
        android:text="âˆ†" />

    <ImageView
        android:id="@+id/expanded_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:visibility="invisible" />

</RelativeLayout>
