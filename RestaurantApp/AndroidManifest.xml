<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamdoge.restaurantapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.teamdoge.login.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.teamdoge.restaurantapp.Main_ExpandableList"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.teamdoge.restaurantapp.Add_item"
            android:label="@string/title_activity_add_item" >
        </activity>
        <!--
             <activity
            android:name="com.teamdoge.restaurantapp.InventoryList"
            android:label="@string/title_activity_inventory_list" >
		</activity>
        -->
        <activity
            android:name="com.teamdoge.login.SignUpActivity"
            android:label="@string/title_activity_signup"
            android:parentActivityName="com.teamdoge.login.LoginActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.teamdoge.restaurantapp.MainActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity android:name="com.teamdoge.restaurantapp.inventory" >
        </activity>
        <activity
            android:name="com.teamdoge.restaurantapp.adding_inventory_item_page"
            android:label="@string/inv_item_page" >
        </activity>
        <activity
            android:name="com.teamdoge.login.ForgotPassword"
            android:label="Forgot Password" >
        </activity>
        <activity
            android:name="com.teamdoge.restaurantapp.DayShiftsManagementActivity"
            android:label="@string/title_activity_shift_management_actity" >
        </activity>
        <activity
            android:name="com.teamdoge.trackingmenu.AddMenuItemActivity"
            android:label="@string/title_activity_add_menu_item" >
        </activity>
        <activity
            android:name="com.teamdoge.restaurantapp.Add_Item"
            android:label="@string/title_activity_add__item" >
        </activity>
        <activity
            android:name="com.teamdoge.restaurantapp.Edit_item"
            android:label="@string/title_activity_edit_item" >
        </activity>
        <activity
            android:name="com.teamdoge.userprofile.View_Profile"
            android:label="@string/title_activity_view__profile" >
        </activity>
        <activity
            android:name="com.teamdoge.userprofile.ShiftSelectorActivity"
            android:label="@string/title_activity_shift_selector" >
        </activity>
        <activity
            android:name="com.teamdoge.userprofile.ProfileActivity"
            android:label="@string/title_activity_view__profile" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.teamdoge.restaurantapp.MainActivity" />
        </activity>
        <activity
            android:name="com.teamdoge.userprofile.Edit_Profile"
            android:label="@string/title_activity_edit__profile"
            android:parentActivityName="com.teamdoge.restaurantapp.View_Profile" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.teamdoge.restaurantapp.View_Profile" />
        </activity>
        <activity
            android:name="com.teamdoge.restaurantapp.View_Item"
            android:label="@string/title_activity_view__item" >
        </activity>
        <activity
            android:name="com.teamdoge.restaurantapp.Manager_View_Profile"
            android:label="@string/title_activity_manager__view__profile" >
        </activity>
    </application>

</manifest>
